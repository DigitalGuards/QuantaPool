# Prometheus configuration - generated by Ansible
global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: 15s
  external_labels:
    environment: {{ environment }}
    project: quantapool

rule_files:
  - /etc/prometheus/rules/*.yml

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - alertmanager:9093

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # Contract state exporter
  - job_name: 'contract-exporter'
    static_configs:
      - targets: ['contract-exporter:9101']
    scrape_interval: 30s

  # Primary validator node metrics
  - job_name: 'primary-node-exporter'
    static_configs:
      - targets: ['{{ hostvars[groups["primary"][0]]["private_ip"] }}:9100']
        labels:
          node: 'primary'

  - job_name: 'primary-gzond'
    static_configs:
      - targets: ['{{ hostvars[groups["primary"][0]]["private_ip"] }}:6060']
        labels:
          node: 'primary'
    metrics_path: /debug/metrics/prometheus

  - job_name: 'primary-beacon'
    static_configs:
      - targets: ['{{ hostvars[groups["primary"][0]]["private_ip"] }}:8080']
        labels:
          node: 'primary'

  - job_name: 'primary-validator'
    static_configs:
      - targets: ['{{ hostvars[groups["primary"][0]]["private_ip"] }}:8081']
        labels:
          node: 'primary'

{% if 'backup' in groups and groups['backup'] | length > 0 %}
  # Backup validator node metrics
  - job_name: 'backup-node-exporter'
    static_configs:
      - targets: ['{{ hostvars[groups["backup"][0]]["private_ip"] }}:9100']
        labels:
          node: 'backup'

  - job_name: 'backup-gzond'
    static_configs:
      - targets: ['{{ hostvars[groups["backup"][0]]["private_ip"] }}:6060']
        labels:
          node: 'backup'
    metrics_path: /debug/metrics/prometheus

  - job_name: 'backup-beacon'
    static_configs:
      - targets: ['{{ hostvars[groups["backup"][0]]["private_ip"] }}:8080']
        labels:
          node: 'backup'
{% endif %}
