# Monitoring stack environment - generated by Ansible
# {{ ansible_date_time.iso8601 }}

# Grafana
GRAFANA_ADMIN_PASSWORD={{ grafana_admin_password }}
GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
GF_USERS_ALLOW_SIGN_UP=false

# Validator targets
PRIMARY_VALIDATOR_HOST={{ hostvars[groups['primary'][0]]['private_ip'] }}
{% if 'backup' in groups and groups['backup'] | length > 0 %}
BACKUP_VALIDATOR_HOST={{ hostvars[groups['backup'][0]]['private_ip'] }}
{% else %}
BACKUP_VALIDATOR_HOST=
{% endif %}

# Zond RPC
ZOND_RPC_URL={{ zond_rpc_url }}

# Contract addresses
STQRL_ADDRESS={{ stqrl_address | default('0x844A6eB87927780E938908743eA24a56A220Efe8') }}
DEPOSIT_POOL_ADDRESS={{ deposit_pool_address | default('0x9E800e8271df4Ac91334C65641405b04584B57DC') }}
REWARDS_ORACLE_ADDRESS={{ rewards_oracle_address | default('0x541b1f2c501956BCd7a4a6913180b2Fc27BdE17E') }}
OPERATOR_REGISTRY_ADDRESS={{ operator_registry_address | default('0xD370e9505D265381e839f8289f46D02815d0FF95') }}

# Alerting (optional)
{% if discord_webhook_url is defined and discord_webhook_url != '' %}
DISCORD_WEBHOOK_URL={{ discord_webhook_url }}
{% endif %}
{% if telegram_bot_token is defined and telegram_bot_token != '' %}
TELEGRAM_BOT_TOKEN={{ telegram_bot_token }}
TELEGRAM_CHAT_ID={{ telegram_chat_id }}
{% endif %}
