# QuantaPool Monitoring Stack Configuration
# Copy this file to .env and fill in your values

# ==============================================
# GRAFANA CONFIGURATION
# ==============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password
GRAFANA_ROOT_URL=http://localhost:3000

# ==============================================
# VALIDATOR NODE (where go-zond/qrysm runs)
# ==============================================
# IP address or hostname of your validator server
VALIDATOR_HOST=192.168.1.100

# ==============================================
# ZOND RPC CONFIGURATION
# ==============================================
ZOND_RPC_URL=https://qrlwallet.com/api/zond-rpc/testnet

# ==============================================
# CONTRACT ADDRESSES (from testnet.json)
# ==============================================
# Zond uses Z-prefix format for addresses
STQRL_ADDRESS=Z844A6eB87927780E938908743eA24a56A220Efe8
DEPOSIT_POOL_ADDRESS=Z9E800e8271df4Ac91334C65641405b04584B57DC
REWARDS_ORACLE_ADDRESS=Z541b1f2c501956BCd7a4a6913180b2Fc27BdE17E
OPERATOR_REGISTRY_ADDRESS=ZD370e9505D265381e839f8289f46D02815d0FF95

# ==============================================
# CONTRACT EXPORTER SETTINGS
# ==============================================
# How often to query contract state (milliseconds)
CONTRACT_SCRAPE_INTERVAL=30000

# ==============================================
# ALERTING - DISCORD
# ==============================================
# Create a webhook in your Discord server:
# Server Settings > Integrations > Webhooks > New Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# ==============================================
# ALERTING - TELEGRAM (Optional)
# ==============================================
# Create a bot via @BotFather and get your chat ID
# TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# TELEGRAM_CHAT_ID=-1001234567890
